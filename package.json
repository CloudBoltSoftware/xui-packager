{
  "name": "@cloudbolt/xui-packager",
  "version": "1.1.0",
  "description": "CloudBolt Javascript package for bundling XUI content",
  "engines": {
    "node": ">=14.0.0"
  },
  "bin": {
    "xui": "bin/index.js"
  },
  "scripts": {
    "check": "npm run check:format && npm run check:lint && npm run test",
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "prepare": "husky install",
    "test": "vitest --silent"
  },
  "files": [
    "bin",
    "!**.test.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CloudBoltSoftware/xui-packager.git"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "load-pkg": "^4.0.0",
    "minimist": "^1.2.6",
    "rsync": "^0.6.1",
    "sha256-file": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "vitest": "^0.32.0"
  }
}
